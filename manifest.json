{
    "manifest_version": 3,
    "name": "Page Notes",
    "version": "1.0",
    "description": "ウェブページにコメントを追加・表示できる拡張機能",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_title": "Page Notes"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }],
    "commands": {
      "open-comment": {
        "suggested_key": {
          "default": "Alt+M"
        },
        "description": "コメント入力ウィンドウを開く"
      }
    }
  }